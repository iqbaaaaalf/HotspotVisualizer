<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="SequentialBtn"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iqbaaaaalf.hotspotvisualizer.MainActivity" >

    <TextView
        android:id="@+id/lblPraproses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:hint="Csv File"
        android:text="Praproses"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/vwStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnTransformData"
        android:layout_width="120dp"
   		android:layout_height="40dp"
        android:layout_below="@+id/inptFile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="TransformBtn"
        android:text="Transform" />

    <EditText
        android:id="@+id/inptFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblPraproses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="text"
        android:text="01-riau" />

    <Button
        android:id="@+id/btnSequential"
        android:layout_width="120dp"
   		android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnTransformData"
        android:layout_below="@+id/btnTransformData"
        android:layout_marginTop="32dp"
        android:onClick="SequentialBtn"
        android:text="Sequential" />

    <Button
        android:id="@+id/btnSpade"
        android:layout_below="@+id/btnSequential"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:layout_width="120dp"
   		android:layout_height="40dp"
        android:onClick="SpadeBtn"
        android:text="Spade" />

</RelativeLayout>